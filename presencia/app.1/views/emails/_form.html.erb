<%= form_for(@email) do |f| %>
  <% if @email.errors.any? %>
    <div id="error_explanation" class="errores">
      <h4><b><u>Errores Encontrados</u></b></h4>
      <% @email.errors.full_messages.each do |message| %>
        <%= message %><br>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email , class: 'form-control' %>
  </div><br>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password , class: 'form-control' %>
  </div><br>
  <div class="field">
    <%= f.label :smtp_server %><br>
    <%= f.text_field :smtp_server , class: 'form-control' %>
  </div><br>
  <div class="field">
    <%= f.label :puerto %><br>
    <%= f.number_field :puerto , class: 'form-control' %>
  </div><br>
  <div class="field">
    <b>SSL</b> <%= f.check_box :ssl %>
  </div><br>
  <div class="actions">
    <%= f.submit 'Aceptar' , class: 'btn btn-default'%>
  </div>
  <br>
<% end %>
