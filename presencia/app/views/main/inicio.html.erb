<div class="text-center">
	<p id="notice"><%= notice %></p>

	<h2 style="margin-bottom: 50px;"><b>Sistema de control de presencia Sinapse</b></h2>
	<div class="pantalla">
	<% 
		u = User.find(current_user)
		if u.admin == 1
	%>

		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2"></div>

		<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-right">
			<%= link_to "GESTION", {controller: "main", action: "gestion"},{class: 'btn btn-primary btn-lg'}%>
		</div>

		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2"></div>

		<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-left">
			<%= link_to "INFORMACION", logs_path ,{class: 'btn btn-warning btn-lg'}%>
		</div>

		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2"></div>
	
	<% else %>
		<%= link_to "INFORMACION", logs_path ,{class: 'btn btn-warning btn-lg'}%>
