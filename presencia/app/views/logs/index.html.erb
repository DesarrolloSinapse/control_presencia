        <td class="cuerpo"><%= log.equipo.ip %></td>
        <td class="cuerpo"><%= log.card.codigo %></td>
        <td class="cuerpo"><%= log.usuario.nombre+' '+log.usuario.apellidos %></td>        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
